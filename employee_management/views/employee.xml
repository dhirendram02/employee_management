<odoo>
    <!-- ================ Form View ==================== -->
    <record id="emp_info_form_view" model="ir.ui.view">
        <field name="name">emp.info.form</field>
        <field name="model">emp.info</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="emp_id"/>
                            <field name="dob"/>
                        </group>
                        <group>
                            <field name="enroll_date"/>
                            <field name="gender"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- ================ Action View ==================== -->
    <record id="action_emp_info" model="ir.actions.act_window">
        <field name="name">Employee Info</field>
        <field name="res_model">emp.info</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>